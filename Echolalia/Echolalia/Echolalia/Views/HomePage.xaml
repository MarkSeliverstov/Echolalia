<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Echolalia"
    x:Class="Echolalia.Views.HomePage"
    Title="{Binding Title}"
    Background="{StaticResource Background}"
    Shell.NavBarIsVisible="True">

    <StackLayout VerticalOptions="Start">
        <StackLayout Margin="20" Spacing="30" >
            <Frame>
                <StackLayout HorizontalOptions="Center">
                    <Label Text="1000"
                           HorizontalOptions="Center"
                           FontSize="60"
                           FontAttributes="Bold"/>
                    <Label Text="Word practiced today"/> 
                </StackLayout>
            </Frame>

            <Button Text="Learn new"
                    BackgroundColor="{StaticResource MyGreen}"/>
            <Button Text="Train"
                    BackgroundColor="{StaticResource MyBlue}"/>
            <Button Text="Knowledge test"
                    BackgroundColor="{StaticResource MyYellow}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>

