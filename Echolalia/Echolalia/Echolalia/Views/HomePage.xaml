<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Echolalia.ViewModels"
    x:Class="Echolalia.Views.HomePage"
    x:DataType="viewmodels:HomeViewModel"
    Title="{Binding Title}"
    Background="{StaticResource Background}"
    Shell.NavBarIsVisible="True">

    <StackLayout VerticalOptions="Start">
        <StackLayout Margin="20" Spacing="30" >
            <Frame>
                <StackLayout HorizontalOptions="Center">
                    <Label Text="{Binding CountPracticeWordToday}"
                           HorizontalOptions="Center"
                           FontSize="60"
                           FontAttributes="Bold"/>
                    <Label Text="Word practiced today"/> 
                </StackLayout>
            </Frame>

            <Button Text="Learn new"
                    BackgroundColor="{StaticResource MyGreen}"
                    Command="{Binding LearnNewWordsCmd}"/>
            <Button Text="Choosing"
                    BackgroundColor="{StaticResource MyBlue}"
                    Command="{Binding ChoosingWordsCmd}"/>
            <Button Text="Writing"
                    BackgroundColor="{StaticResource MyYellow}"
                    Command="{Binding WritingWordsCmd}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
