<?xml version="1.0" encoding="UTF-8" ?>
<!--
    Base controls template for tasks
-->

<StackLayout
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Echolalia.CustomElements.ControllBtns"
    VerticalOptions="EndAndExpand" Margin="0,20,0,0">
    <Button Text="Show Answer"
            IsVisible="{Binding IsVisibleShowAnswerBtn, Mode=TwoWay}"
            Command="{Binding ShowAnswerCmd}"
            BackgroundColor="{StaticResource MyBlue}"
            VerticalOptions="End"/>
    <Button Text="Ok"
            IsVisible="{Binding IsVisibleSubmitAnswerBtn, Mode=TwoWay}"
            Command="{Binding SubmitAnswerCmd}"
            BackgroundColor="{StaticResource MyGreen}"
            VerticalOptions="End"/>
</StackLayout>

